{
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src",
        "importHelpers": false
    },
    "include": ["./src/*.ts"]
}
